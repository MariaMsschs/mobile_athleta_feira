<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="416dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/logo_athleta" />

            <TextView
                android:id="@+id/email_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/roboto"
                android:text="Email:"
                android:textColor="#626161"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_design"
                android:gravity="center_vertical"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#626161"
                android:textCursorDrawable="@drawable/cursor_design"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/senha_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto"
                android:text="Senha:"
                android:textColor="#626161"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/senha"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_design"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#626161"
                android:textCursorDrawable="@drawable/cursor_design"
                android:textSize="14sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <CheckBox
                    android:id="@+id/Lembrar"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="25dp"
                    android:buttonTint="#FEBB38"
                    android:text="Lembrar-me"
                    android:textColor="#626161"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/esqueciSenha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/roboto"
                    android:text="Esqueci minha senha"
                    android:textColor="#FEBB38"
                    android:textSize="16sp" />
            </FrameLayout>

            <Button
                android:id="@+id/botao_login"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_design"
                android:fontFamily="@font/roboto_bold"
                android:text="Fazer Login"
                android:textAllCaps="false"
                android:textColor="#F4F4F4"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/entre_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="12dp"
                android:text="ou Entre com"
                android:textColor="#626161"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/botao_login" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_google" />

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    app:layout_constraintEnd_toStartOf="@+id/imageView9"
                    app:layout_constraintHorizontal_bias="0.527"
                    app:srcCompat="@drawable/logos_facebook" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    app:srcCompat="@drawable/logos_microsoft" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/nao_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NÃ£o tem seu Login?"
                    android:textColor="#626161" />

                <TextView
                    android:id="@+id/botao_cadastrese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:text="Cadastre-se"
                    android:textColor="#FEBB38" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>